menu-1-0 = Firefox
menu-1-0-exec = firefox &
menu-1-1 = Chromium
menu-1-1-exec = chromium &
menu-2-0 = Gimp
menu-2-0-exec = gimp &
menu-2-1 = Scrot
menu-2-1-exec = scrot &
label-open = Apps
label-close = x
label-serparator = |

[module/volume]
type = custom/script
padding = 50
exec = /home/jdm/get-volume

[module/stats]
type = custom/script
padding = 100
exec = /home/jdm/get-stats

[module/cpu]
type = internal/cpu
interval = 10
;format = <label> <bar-load>
;label = C

